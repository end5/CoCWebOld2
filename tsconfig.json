{
    "compilerOptions": {
        "target": "es6",
        "module": "amd",
        "sourceMap": true,
        "outDir": "Build",
        "strict": true,
        // "noUnusedParameters": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "baseUrl": ".",
        "paths": {
            "Engine": ["Engine"],
            "Content": ["Content"]
        },
        "moduleResolution": "node"
    },
    "include": [
        "Engine",
        "Content"
    ],
    "exclude": [
        "Content/Player/CombatActions/MagicalAttacks",
        "Content/Player/CombatActions/PhysicalAttacks",
        "Content/Player/CombatActions/Spells",
    ]
}